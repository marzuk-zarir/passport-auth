{% layout 'main.liquid' %}

<!-- Flashes -->
{% render './partials/flash-messages.liquid',messages: messages %}

<div class="mx-auto" style="max-width: 550px">
    <form action="/auth/login" method="post">
        <h1 class="h2 fw-normal mb-5 text-center">Login to your account</h1>
        <div class="row mb-4">
            <label for="email" class="col-sm-2 col-form-label">Email</label>
            <div class="col-sm-10">
                <input
                    type="email"
                    class="form-control"
                    id="email"
                    name="email"
                    placeholder="Your email address"
                />
            </div>
        </div>
        <div class="row mb-5">
            <label for="password" class="col-sm-2 col-form-label"
                >Password</label
            >
            <div class="col-sm-10">
                <input
                    type="password"
                    class="form-control"
                    id="password"
                    name="password"
                    placeholder="Your password address"
                />
            </div>
        </div>
        <input type="submit" class="btn btn-secondary w-100" value="Login" />

        <p class="my-4 text-secondary text-center">Or sign in with</p>

        <div class="row mb-4 justify-content-end">
            <div class="d-flex flex-column align-items-center">
                <a href="/auth/oauth/google" class="btn btn-danger w-100"
                    ><i class="bi bi-google"></i> Login with Google</a
                >
                <a
                    href="/auth/oauth/facebook"
                    class="btn btn-primary w-100 my-2"
                    ><i class="bi bi-facebook"></i> Login with Facebook</a
                >
                <a href="/auth/oauth/twitter" class="btn btn-info w-100"
                    ><i class="bi bi-twitter"></i> Login with Twitter</a
                >
            </div>
        </div>
        <p class="text-secondary text-center">
            <a href="/auth/signup">Don't have and account? Signup here</a>
        </p>
    </form>
</div>
